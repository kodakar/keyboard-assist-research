% --------------- タイトル整形 ---------------
\let\@title\relax
\let\@author\relax
\let\@etitle\relax
\let\@eauthor\relax
\let\@supervisor\relax
\let\@esupervisor\relax

\def\department#1{\def\@department{#1}}
\def\title#1{\def\@title{#1}}
\def\author#1#2{\def\@author{#1}\def\@supervisor{#2}}
\def\etitle#1{\def\@etitle{#1}}
\def\eauthor#1#2{\def\@eauthor{#1}\def\@esupervisor{#2}}

\def\@maketitle{
    \begin{center}
        {\Large{\gt \@title} \par}% 論文のタイトル部分
        \vspace{2truemm}
        {\Large{\textrm{\bf \@etitle}} \par}% 論文の英語タイトル部分
        \vspace{2truemm}
        \begin{flushright}
        {\normalsize{\gt \@author}\par}% 氏名
        %\vspace{2truemm}
        {\normalsize{\gt \@supervisor} \par}% 氏名
        \end{flushright}
        \hspace{5truemm}
    \end{center}
    \par\vskip 1em
}
%

% --------------- section, subsection, subsubsection の整形 --------------- 
\renewcommand{\section}{\@startsection{section}{1}{\z@}
    {.4\Cvs \@plus.2\Cdp \@minus.1\Cdp}
    {.4\Cvs \@plus.2\Cdp}
    {\reset@font\large\gt\bfseries}
}
\renewcommand{\subsection}{\@startsection{subsection}{2}{\z@}
    {.4\Cvs \@plus.1\Cdp \@minus.5\Cdp}
    {.1\Cvs \@plus.1\Cdp }
    {\reset@font\normalsize\gt\bfseries}
}
\renewcommand{\subsubsection}{\@startsection{subsubsection}{3}{\z@}
    {.2\Cvs \@plus.1\Cdp \@minus.01\Cdp}
    {.2\Cvs \@plus.1\Cdp}
    {\reset@font\normalsize\gt\bfseries}
}
%

% --------------- captionの整形 --------------- 
\long\def\@makecaption#1#2{%
\vskip\abovecaptionskip
\iftdir\sbox\@tempboxa{#1\hskip1zw#2}%
\else\sbox\@tempboxa{#1.　#2}%
\fi
\ifdim \wd\@tempboxa >\hsize
\iftdir #1\hskip1zw#2\relax\par
\else #1.　#2\relax\par\fi
\else
\global \@minipagefalse
\hbox to\hsize{\hfil\box\@tempboxa\hfil}%
\fi
\vskip\belowcaptionskip}
%

\makeatother

